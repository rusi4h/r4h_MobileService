<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText, RtlHardcoded, SpUsage">

    <TextView
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:text="Оформление заказа"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="86dp"/>

    <Button
        android:id="@+id/b_Add"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Оформить"
        android:textSize="16sp"
        android:layout_marginTop="670dp"
        android:layout_marginLeft="110dp"/>

    <EditText
        android:id="@+id/tb_Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Фамилия"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/tb_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="134dp"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Имя"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/tb_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="188dp"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Номер телефона"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/tb_Device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="240dp"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Устройство"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/tb_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="294dp"
        android:ems="17"
        android:inputType="text"
        android:minHeight="48dp"
        android:hint="Адрес почты"
        android:textSize="18dp"/>

    <Spinner
        android:id="@+id/s_amenities"
        android:layout_width="380dp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"/>

    <TextView
        android:id="@+id/textView"

        android:text="Выберите услугу"
        android:layout_width="327dp"
        android:layout_height="37dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>

